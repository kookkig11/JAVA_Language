<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>


<BorderPane xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="HangmanGame.Controller">
   <bottom>
      <GridPane alignment="center" hgap="10" vgap="10" BorderPane.alignment="CENTER">
         <columnConstraints>
            <ColumnConstraints minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints minWidth="10.0" prefWidth="100.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" />
            <RowConstraints maxHeight="94.39999999999998" minHeight="10.0" prefHeight="85.59999694824222" />
            <RowConstraints maxHeight="40.799999999999955" minHeight="10.0" prefHeight="23.20002441406251" />
         </rowConstraints>
         <children>
            <TextField fx:id="enterAlphabetTextField" onAction="#enterAlphabet" GridPane.columnIndex="1">
               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
            <Label fx:id="enterAlphabetLabel" text="Enter Alphabet">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <Label fx:id="amountLabel" text="Amount word:" GridPane.rowIndex="1">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <Label fx:id="showAmountLabel" text="Label" textFill="#0d0089" GridPane.columnIndex="1" GridPane.rowIndex="1">
               <font>
                  <Font name="Courier New" size="14.0" />
               </font>
            </Label>
            <Label fx:id="resultLabel" text="Result:" GridPane.rowIndex="2">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <Label fx:id="showResultLabel" text="Label" textFill="#0d0089" GridPane.columnIndex="1" GridPane.rowIndex="2">
               <font>
                  <Font name="Courier New" size="14.0" />
               </font>
            </Label>
            <Label fx:id="lifeLabel" text="Life:" GridPane.rowIndex="3">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <Label fx:id="showLifeLabel" text="Label" textFill="#0d0089" GridPane.columnIndex="1" GridPane.rowIndex="3">
               <font>
                  <Font name="Courier New" size="14.0" />
               </font>
            </Label>
            <Label fx:id="showHangLabel" prefHeight="98.0" prefWidth="100.0" text="Label" textFill="#0d0089" GridPane.columnIndex="1" GridPane.rowIndex="4">
               <font>
                  <Font name="Courier New Bold" size="14.0" />
               </font>
            </Label>
            <Label fx:id="WinLoseLabel" prefHeight="18.0" prefWidth="108.0" text="Label" textFill="#840608" GridPane.columnIndex="1" GridPane.rowIndex="5">
               <font>
                  <Font name="Courier New Bold" size="14.0" />
               </font>
            </Label>
         </children>
      </GridPane>
   </bottom>
</BorderPane>
